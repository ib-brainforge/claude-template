{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "Claude Code hooks for automatic agent telemetry - no manual logging needed in agents",

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'CLAUDE_HOOK_EVENT=PreToolUse \"$PWD/.claude/hooks/telemetry.sh\"'"
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'CLAUDE_HOOK_EVENT=PostToolUse \"$PWD/.claude/hooks/telemetry.sh\"'"
          }
        ]
      }
    ],

    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'CLAUDE_HOOK_EVENT=SubagentStop \"$PWD/.claude/hooks/telemetry.sh\"'"
          }
        ]
      }
    ],

    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'CLAUDE_HOOK_EVENT=Stop \"$PWD/.claude/hooks/telemetry.sh\"'"
          }
        ]
      }
    ]
  }
}
